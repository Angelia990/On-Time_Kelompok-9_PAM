<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteSchedule">

    <RelativeLayout
        android:id="@+id/complete_layout"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/completed_schedule_pop_up">

        <TextView
            android:id="@+id/title_complete"
            android:layout_width="297dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Yeay! Today your schedule is completed"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc_complete"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Add notes and photos for the activities you have done."
            android:textColor="#828282"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/add_note_complete"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/nunito_regular"
            android:hint="Add Notes here"
            android:textColorHint="@color/white"
            android:background="@drawable/complete_typing_field"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:layout_marginHorizontal="12dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/add_note_complete"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="22dp"
            android:clickable="true"
            android:fontFamily="@font/nunito_regular"
            android:src="@drawable/add_image" />

        <Button
            android:id="@+id/save_complete"
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:background="@drawable/start_button"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_bold"
            android:paddingVertical="0dp"
            app:backgroundTint="#6C31C4"
            android:layout_marginStart="27dp"
            android:layout_marginTop="376dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>